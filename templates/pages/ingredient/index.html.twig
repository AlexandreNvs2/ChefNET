{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Mes Ingrédients
{% endblock %}

{% block body %}
        <div class="container mt-4">
            
            <h1>Mes ingrédients </h1>

            {#Ici on compte le nombre d'item et on l'affiche#}
            <h5 class="mt-4"> Il y a {{ ingredients.getTotalItemCount }} ingrédients !</h5>

            <table class="table table-hover mt-4">
                <thead>
                <tr>
                    <th scope="col">Numéro</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Date de création</th>
                </tr>
                </thead>
                <tbody>
                {% for ingredients in ingredients %} {# boucle for pour afficher les ingredients dans le table #}
                    <tr class="table-primary mt-4">
                        <th scope="row">{{ ingredients.id }}</th>
                        <td>{{ ingredients.name }}</td>
                        <td>{{ ingredients.price }}</td>
                        <td>{{ ingredients.createdAt|date('d/m/Y') }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            {# Ici on appel la méthode de pagination  #}
            <div class="navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(ingredients) }}
            </div>
        </div>
    
{% endblock %}
